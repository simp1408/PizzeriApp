<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>Voglia di Pizza</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    .<div class="d-flex flex-column justify-content-center">
    <nav class="navbar navbar-expand-lg p-3">
        <div class="container-fluid mx-5">
            <img src="~/img/logo.png" /> <span style="font-family:fantasy;color:orange;margin-right:64px">IN FORNO</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav d-flex justify-content-between">
                <ul class="navbar-nav justify-content-center">

                    <li class="item mx-3">
                        <a>@Html.ActionLink("Le nostre Pizze", "ListaPizze", "Pizza", null, new { @class = "text-white" })</a>
                    </li>
                    <li class="item mx-3">
                        <a>@Html.ActionLink("Menu Pizze", "Menu", "Pizza", null, new { @class = "text-white " })</a>
                    </li>

                    <li class="item mx-3">
                        <a>@Html.ActionLink("Carrello", "Carrello", "DettagliOrdine", null, new { @class = "text-white " })</a>
                    </li>
                    <li class="item mx-3">
                        <a>@Html.ActionLink("Registrazione", "Create", "Utente", null, new { @class = "text-white " })</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="item mx-3">
                            <a class="nav-link text-dark">@User.Identity.Name @Html.ActionLink("(LogOut)", "LogOut", "Login", null, new { @class = "text-warning d-flex justify-content-center" })</a>
                        </li>

                    }
                    else
                    {
                        <li class="item mx-3">
                            <a>@Html.ActionLink("Login", "Login", "Login", null, new { @class = "text-white tex-decoration-none" })</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</div>


    <div class="container body-content col-11">
        @RenderBody()
        <hr />
    </div>
    
    <footer class="text-white">
        <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
