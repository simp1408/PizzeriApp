@model IEnumerable<PizzeriApp.Pizza>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomePizza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrezzoPizza)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomePizza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredienti)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrezzoPizza)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Img)

            <img src="~/Content/img/@item.Img" style="width:50px;" alt="Alternate Text" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDpizza }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDpizza }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDpizza })
        </td>
    </tr>
}

</table>
