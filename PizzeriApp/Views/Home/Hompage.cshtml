<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <title>Voglia di Pizza</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <nav class="navbar navbar-expand-lg p-3">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="~/img/logo.png" /> <span style="font-family:fantasy;color:orange">IN FORNO</span></a>
            <div class="d-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="item">
                        <a class="nav-link">@Html.ActionLink("Home", "Home", "Home")</a>
                    </li>
                    <li class="item">
                        <a class="nav-link">@Html.ActionLink("Le nostre Pizze", "ListaPizze", "Pizza", null)</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="item">
                            <a class="nav-link">@User.Identity.Name @Html.ActionLink("(LogOut)", "LogOut", "Login")</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link">@Html.ActionLink("Login", "Login", "Login", null)</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row g-0">
            <div class="col-md-8" max-width="200px">
                <div class="content text-white">
                    <p class="content">Prova le nostre <span style="color:orange;">PIZZE</span></p>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-grid gap-2 col-2 mx-auto mt-3">
                        <button type="button" class="button">@Html.ActionLink("Login", "Login", "Login")</button>
                    </div>
                </div>
            </div>
            <div class="content-img col-md-4">
                <img src="~/img/hero_pizza.png" class="img-fluid" alt="...">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 bg-body p-5">
        <img src="~/img/immagine-frontPage.jpg"/>NUMERO DEI CONTATTI</div>
        <div class="col-4 bg-info p-5">LOGO DEI SOCIAL</div>
    </div>
    <div class="row">
        <img src="~/img/immagine-frontPage.jpg"/>
        <div class="col-md-6 bg-secondary p-5">LOGO DEI SOCIAL</div>
    </div>

    <div class="container body-content col-11">
        @RenderBody()
        <hr />
    </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>

