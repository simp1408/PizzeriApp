@model PizzeriApp.Utente

@{
    ViewBag.Title = "Create";
}

<h2>Login</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontalmb  justify-content-center align-items-center mx-auto bg-dark w-50 pb-5">
        <h4>Utente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-flex col-md-12 my-3 justify-content-center align-items-center text-white flex-column">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label " })
            <div class="col-md-12 d-flex justify-content-center align-items-center text-white flex-column">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 my-3 text-white d-flex justify-content-center align-items-center flex-column">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
            <div class="col-md-12 d-flex justify-content-center align-items-center text-white flex-column">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-flex">
            <div class="col-md-offset-2 col-md-12 my-3 d-flex justify-content-center align-items-center text-white flex-column">
                <input type="submit" value="Login" class="button" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
